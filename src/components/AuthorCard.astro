---
import type { CollectionEntry } from "astro:content";

interface Props {
  author: CollectionEntry<"author">;
}

const { author } = Astro.props;
---

<div class="max-w-lg mx-auto bg-white rounded-lg shadow-md p-5">
  <img
    class="w-32 h-32 rounded-full mx-auto"
    src={author.data.avatar.src}
    alt={author.data.name}
  />
  <h2 class="text-center text-2xl font-semibold mt-3">
    {author.data.name}
  </h2>
  <p class="text-center text-gray-500 mt-1">{author.data.subtitle}</p>
  <div class="flex justify-center mt-5">
    <a
      href={`https://twitter.com/${author.data.twitter}`}
      class="text-blue-500 hover:text-blue-700 mx-3"
    >
      Twitter
    </a>
    <a
      href={`https://www.linkedin.com/in/${author.data.linkedIn}`}
      class="text-blue-500 hover:text-blue-700 mx-3"
    >
      LinkedIn
    </a>
    <a
      href={`https://github.com/${author.data.github}`}
      class="text-blue-500 hover:text-blue-700 mx-3"
    >
      GitHub
    </a>
  </div>
  <div class="mt-5">
    <h3 class="text-xl font-semibold">Bio</h3>
    <p class="text-gray-600 mt-2">{author.data.bio}</p>
  </div>
  <a
    href={`/blog/${author.id}`}
    class="block text-end mt-5 text-blue-500 hover:text-blue-700"
  >
    Leer m√°s
  </a>
</div>
